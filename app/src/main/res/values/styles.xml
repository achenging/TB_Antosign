<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <item name="colorPrimary">@color/grey</item>
        <item name="colorPrimaryDark">@color/grey</item>
        <item name="android:windowBackground">@color/little_grey</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.No_Actionbar_divider" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="android:showDividers">none</item>
        <item name="android:divider">?android:attr/actionBarDivider</item>
        <item name="android:paddingLeft">80px</item>
        <item name="android:dividerPadding">24dip</item>
    </style>

    <color name="red">#FF0000</color>
    <color name="black">#ff000000</color>
    <color name="grey">#28000000</color>
    <color name="black_and_grey">#ab000000</color>
    <color name="little_grey">#ff9ca0a2</color>
</resources>
