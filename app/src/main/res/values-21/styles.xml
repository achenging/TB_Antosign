<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <item name="android:colorPrimary">@color/grey</item>
        <item name="android:colorPrimaryDark">@color/grey</item>
        <item name="android:windowBackground">@color/little_grey</item>
        <item name="actionOverflowMenuStyle">@style/PopupMenu.GreyStyle</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.No_Actionbar_divider" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="android:showDividers">none</item>
        <item name="android:divider">?android:attr/actionBarDivider</item>
        <item name="android:paddingLeft">80px</item>
        <item name="android:dividerPadding">24dip</item>
    </style>
    <style name="PopupMenu.GreyStyle" parent="android:Widget.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_background</item>
    </style>


</resources>
